respawn-window -k
rename-window "logs"

selectp -t 0
splitw -h -p 50
splitw -v -p 50

selectp -t 0
splitw -v -p 50

selectp -t 3

send-keys -t 0 'tail -f -n50 /var/log/apache2/error.log|ccze' enter
send-keys -t 1 'tail -f -n50 /var/log/apache2/access.log|ccze' enter
send-keys -t 2 'htop' enter
send-keys -t 3 'tail -f -n50 /var/log/syslog|ccze' enter
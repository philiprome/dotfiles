# Global settings
set pager_index_lines=7
set pager_stop
set quit=ask-yes
set locale="fr_FR"
set date_format="%A %d %b %Y Ã  %H:%M:%S (%Z)"
set edit_hdrs
auto_view text/html
set editor="vim"
set locale="iso-8859-15"
set header_cache = "~/.cache/mutt"
set timeout = 15
set mail_check = 10
set sort = reverse-date-received
set imap_check_subscribed
set mbox_type=Maildir
# set editor = "vim -c 'set tw=72' -c 'set wrap'"

# Macros
macro index <f2> '<sync-mailbox><enter-command>source ~/.mutt/viacesi<enter><change-folder>!<enter>'
macro index <f3> '<sync-mailbox><enter-command>source ~/.mutt/hotmail<enter><change-folder>!<enter>'

# Accounts
source ~/.mutt/hotmail
source ~/.mutt/viacesi

# Display
source ~/.mutt/colors
source ~/.mutt/sidebar


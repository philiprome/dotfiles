# General
auto-reload yes
refresh-on-startup yes
confirm-exit yes
reload-time 30
browser firefox
player vlc
article-sort-order date-asc

# Notification
notify-always yes
notify-format "newsbeuter: %n unread articles within %f unread feeds"
notify-program notify-send

# Colors
color listnormal          default default 
color listfocus           black white
color listfocus_unread    black white bold
color info                default cyan bold

# Keybinding
bind-key k up
bind-key j down
bind-key q quit
unbind-key l
bind-key l open
bind-key m toggle-show-read-feeds
